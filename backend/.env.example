# VOTP Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/votp_db

# JWT Configuration - Generate a secure secret
# Use: openssl rand -base64 32 (Linux/Mac) or online JWT secret generator
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-min-32-chars

# Server Configuration
HOST=127.0.0.1
PORT=8000

# SMTP Email Configuration
# For Gmail: Enable 2FA and use App Passwords (not regular password)
# For other providers: Use your SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-not-regular-password
SMTP_FROM=noreply@votp.com
SMTP_USE_SSL=true

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Logging Level
# Options: error, warn, info, debug, trace
RUST_LOG=info

# CORS Configuration (development)
# In production, set this to your frontend domain
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security Settings
# Token expiry in hours
JWT_EXPIRY_HOURS=24

# Verification code expiry in minutes
VERIFICATION_CODE_EXPIRY_MINUTES=10

# Password requirements
MIN_PASSWORD_LENGTH=8

# Database Pool Settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30

# Development Settings
# Set to true for development mode
DEV_MODE=true

# Enable GraphQL playground (disable in production)
ENABLE_PLAYGROUND=true