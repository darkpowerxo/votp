# VOTP Local Development Environment
# Simple configuration for testing

# Database Configuration (matches docker-compose.dev.yml)
DATABASE_URL=postgresql://postgres:password@localhost:5432/votp_db

# JWT Configuration
JWT_SECRET=local-development-jwt-secret-key-not-for-production-use

# Server Configuration
HOST=127.0.0.1
PORT=8000

# SMTP Configuration (Optional for local testing)
# You can use a service like Mailtrap.io for testing emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@votp.com
SMTP_USE_SSL=true

# Redis Configuration (matches docker-compose.dev.yml)
REDIS_URL=redis://localhost:6379

# Development Settings
RUST_LOG=debug
DEV_MODE=true
ENABLE_PLAYGROUND=true
CORS_ORIGIN=*

# Simplified settings for local testing
JWT_EXPIRY_HOURS=24
VERIFICATION_CODE_EXPIRY_MINUTES=10
MIN_PASSWORD_LENGTH=6
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60